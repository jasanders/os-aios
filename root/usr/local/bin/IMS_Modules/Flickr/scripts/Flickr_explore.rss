<onUserInput>
input = currentUserInput();
ret = "false";
if (input == "left")
{
	print("====== ignore left key ======");
	ret = "true";
}
else if (input == "up")
{
	index = getFocusItemIndex();
	if(index == 0){
		postMessage("return");
		ret = "true";
	}
	else{
		ret = "false";
	}
}
else if (input == "setup" || input == "guide")
{
	setup_guide_pressed = "yes";
	saveOsdArea();
}
ret;
</onUserInput>

