function buffering()
{
	var bufferStramSize = videoObj.execCmd("playback_getCachedStreamSize");
	window.console.debug("bufferStramSize:" + bufferStramSize);
	bufferingCatchedPercentage =bufferStramSize/(1024*5);
	if(bufferingCatchedPercentage > 100)
	{
	    hideOSD();
	    resumePlay();
	    bufferingCatchedPercentage = 0;
	} 
	else 
	{
		setProgress("element1", bufferingCatchedPercentage);
		setTimeout("buffering()", 200);
	}
}



